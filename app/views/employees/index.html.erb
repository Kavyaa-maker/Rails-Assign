<p id="notice"><%= notice %></p>
<div class="container" align="center">
<div class="jumbotron">
<h1>Employees</h1>
</div>
<table   align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr >
      <h2><td><%= employee.name %></td></h2>
      <h2><td><%= employee.age %></td></h2>
      <h2><td><%= employee.gender %></td></h2>
      <h2><td><%= employee.Designation %></td></h2>
      <td><%= link_to 'Show', employee %></td>
      <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
      <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>
<div class="container" align="center">
<%= link_to 'New Employee', new_employee_path %>
</div>
</div>
